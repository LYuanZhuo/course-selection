/* pages/user/user.wxss */
page {
  height: 100%;
}

/* 登陆页面css */
.loginContainer {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.logoContainer {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 10px;
}
.inputContainer {
  width: 90%;
}
.buttonContainer{
  margin: 10px;
}
.loginButton{
  width:100%;
  height:45px;
}
.tips{
  font-size: 13px;
  color: rgb(190,190,190);
  margin: 10px;
}

/* 登陆后页面css */
.userContainer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: white;
}
.userBaseInfo{
  display: flex;
  flex-direction: row;
}
.userScore{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 20px;
  font-size: 20px;
  color: #CD9B1D;
}
.userAvatar {
  margin: 8px;
}
.userInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 8px;
}
.userName {
  font-size: 20px;
}
.studentId {
  color: gray;
  font-size: 13px;
}
.userOtherInfoContainer{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 13px;
  padding: 5px;
  color: #696969;
  height: 35px;
  background: white;
}
.userOtherInfoContainer .grade{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 8px;
}
.userOtherInfoContainer .college{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 8px;
}
.menuContainer{
  background: white;
  margin-bottom: 5px;
}
.myRecentCourseText{
  padding: 10px;
  font-size: 12px;
  color: gray;
}
.myRecentCourses{
  background: white;
}
.success{
  color: green;
}
.fail{
  color: #e01f1f;
}